/* pages/ranklist/ranklist.wxss */

.background-image {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:cover;
  background-size:100% 100%;
  z-index: -1;
  opacity: 0.5;/*透明度*/
  }
  .tab-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .tab-item {
    flex-grow: 1;
    text-align: center;
    padding: 10px;
  }
  
  .tab-label {
    font-size: 16px;
    color: #333;
  }
  
  .tab-label-selected {
    font-size: 18px;
    color: #ff0000;
  }
  
  .rank-list {
    margin-top: 20px;
  }
  
  .rank-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #eee;
  }
  
  .rank {
    margin-right: 10px;
  }
  
  .back-button {
    position: fixed;
    bottom: 20px;
    left: 20px;
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #ff0000;
    color: #fff;
    border-radius: 20px;
  }
  
  .back-icon {
    font-size: 16px;
  }