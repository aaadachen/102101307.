.background-image {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:cover;
  background-size:100% 100%;
  z-index: -1;
  opacity: 0.5;/*透明度*/
  }

.title {
  font-size: 24px;
  margin-bottom: 50px;
  margin-top: 50px; /* 设置与上方元素的间距 */
}

.player {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 5px;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 10px;
}

.player-info {
  display: flex;
  flex-direction: column;
}

.player-id {
  font-size: 16px;
  margin-bottom: 5px;
}

.player-name {
  font-size: 14px;
  color: #666666;
}

.match-button {
  width: 200px;
  height: 60px;
  padding: 10px 20px; /* 设置按钮的内边距 */
  background-color: #b2b4cf;
  color: #FFFFFF;
  font-size: 18px;
  border-radius: 4px; /* 设置按钮的边框圆角 */
  margin-top: 50px; /* 设置与上方元素的间距 */
}
