/* pages/result/result.wxss */
.background-image {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:cover;
  background-size:100% 100%;
  z-index: -1;/*让背景置于最底部*/
  opacity: 0.5;/*透明度*/
  }

  .title {
    font-size: 24px; /* 设置文字大小为 24px */
    font-weight: bold; /* 设置文字加粗 */
    color: #333333; /* 设置文字颜色为 #333333 */
    margin-top: 50px; /* 设置与上方元素的间距 */
  }
  .title1{
    margin-top: 20px;
    font-size: 20px; /* 设置文字大小为 24px */
    color: #2594c7;
  }
  .result{
    font-size: 30px; /* 设置文字大小为 24px */
    font-weight: bold; /* 设置文字加粗 */
    color: #d33131; /* 设置文字颜色为 #333333 */
    margin-top: 50px; /* 设置与上方元素的间距 */
    margin-bottom: 80px; /* 设置文字与下方按钮的间距 */
  }
  .btn {
    display: inline-block; /* 设置按钮为内联块级元素 */
    padding: 10px 20px; /* 设置按钮的内边距 */
    margin-bottom: 10px; /* 设置按钮之间的垂直间距 */
    background-color: #b2b4cf; /* 设置按钮的背景颜色 */
    color: #FFFFFF; /* 设置按钮的文字颜色 */
    font-size: 16px; /* 设置按钮的文字大小 */
    border-radius: 4px; /* 设置按钮的边框圆角 */
  }