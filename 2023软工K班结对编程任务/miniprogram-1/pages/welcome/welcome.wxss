/* pages/welcome/welcome.wxss */
.background-image {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:cover;
  background-size:100% 100%;
  z-index: -1;
  }
  .touzi-image {
    position: absolute;
    /*left: 200px;*/
    top: 20%;
    /*display: block; /* 将图片转换为块级元素 */
    width: 60%; /* 设置图片的宽度 */
    height: 20%; /* 设置图片的高度 */
    margin: 0 auto; /* 水平居中显示 */
    opacity: 0.6;/*透明度*/
  }
  .title {
    font-size: 24px; /* 设置文字大小为 24px */
    font-weight: bold; /* 设置文字加粗 */
    color: #333333; /* 设置文字颜色为 #333333 */
    margin-top: 15%; /* 设置与上方元素的间距 */
    margin-bottom: 70%; /* 设置文字与下方按钮的间距 */
    font-family: "PingFang SC", sans-serif;
  }
  .btn {
    display: inline-block; /* 设置按钮为内联块级元素 */
    /*padding: 10px 20px; /* 设置按钮的内边距 */
    padding: 2% 10%;
    margin-bottom: 5%; /* 设置按钮之间的垂直间距 */
    background-color: #b2b4cf; /* 设置按钮的背景颜色 */
    color: #FFFFFF; /* 设置按钮的文字颜色 */
    font-size: 16px; /* 设置按钮的文字大小 */
    border-radius: 4px; /* 设置按钮的边框圆角 */
  }
  
  
